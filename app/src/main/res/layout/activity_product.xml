<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/product"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProductActivity"
    android:fitsSystemWindows="true">

    <TextView android:id="@+id/product_saved"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_section"

        android:layout_margin="32dp"

        android:visibility="invisible"
        />

    <LinearLayout android:id="@+id/input_section"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <EditText android:id="@+id/product_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:padding="16dp"
            android:background="#0FA3B1"

            android:hint="Entre o nome do produto"

            android:textSize="16sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textColorHint="#fff" />

        <EditText android:id="@+id/product_prize"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:inputType="numberDecimal"

            android:padding="16dp"
            android:background="#0FA3B1"

            android:hint="Entre o preÃ§o do produto"

            android:textSize="16sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textColorHint="#fff" />

        <Button android:id="@+id/product_save"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="#FA9F42"


            android:layout_gravity="center_horizontal"

            android:textSize="16sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textColorHint="#fff"
            android:text="Salvar o produto" />

    </LinearLayout>

    <TextView android:id="@+id/last_page"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"

        android:gravity="bottom"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0FA3B1"
        android:text="Voltar para tela anterior" />

</androidx.constraintlayout.widget.ConstraintLayout>